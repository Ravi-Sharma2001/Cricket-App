<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="175dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/profile2"
    android:backgroundTint="@android:color/transparent"
    android:backgroundTintMode="screen"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:translationX="20dp"
        app:cardBackgroundColor="#BC3F51B5"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:background="@drawable/backshadow"
        card_view:cardElevation="10dp">

        <TextView
            android:id="@+id/hometeam"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="MI"
            android:textAlignment="center"
            android:textColor="#959090"
            android:textSize="45sp"
            android:translationX="5dp"
            android:translationY="42dp" />

        <TextView
            android:id="@+id/stadium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chinnaswami Stadium"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationY="110dp" />

        <TextView
            android:id="@+id/awayteam"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="CSK"
            android:textAlignment="center"
            android:textColor="#959090"
            android:textSize="45sp"
            android:translationX="185dp"
            android:translationY="42dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:translationY="55dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="39/03/23"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationY="20dp" />


    </androidx.cardview.widget.CardView>
</LinearLayout>